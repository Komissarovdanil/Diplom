                            <Button x:Name="Pr_3" Content="№3" Grid.Column="2" Grid.Row="0" Click="Pr_3_Click" Height="50" Margin="0 5 0 5"/>
                            <Button x:Name="Pr_3_1" Content="№3" Grid.Column="3" Grid.Row="0" Click="Pr_3_1_Click" Height="50" Margin="0 5 0 5"/>
                            <Button x:Name="Pr_3_2" Content="№4" Grid.Column="4" Grid.Row="0" Click="Pr_3_2_Click" Height="50" Margin="0 5 0 5"/>
