                            <Button x:Name="Pr_5" Content="№8" Grid.Column="3" Grid.Row="1" Click="Pr_5_Click" Height="50" Margin="0 5 0 5"/>
                            <Button x:Name="Pr_5_1" Content="№9" Grid.Column="4" Grid.Row="1" Click="Pr_5_1_Click" Height="50" Margin="0 5 0 5"/>
                            <Button x:Name="Pr_6" Content="№10" Grid.Column="0" Grid.Row="2" Click="Pr_6_Click" Height="50" Margin="0 5 0 5"/>
                            <Button x:Name="Pr_6_2" Content="№11" Grid.Column="1" Grid.Row="2" Click="Pr_6_2_Click" Height="50" Margin="0 5 0 5"/>
